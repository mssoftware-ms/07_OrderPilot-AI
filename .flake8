[flake8]
max-line-length = 120
extend-ignore =
    E111,
    E114,
    E117,
    E128,
    E129,
    E131,
    E203,
    E226,
    E231,
    E261,
    E301,
    E302,
    E303,
    E304,
    E305,
    E402,
    E501,
    E701,
    E704,
    E712,
    E722,
    E741,
    W291,
    W292,
    W293,
    W391,
    W503,
    W504,
    F401,
    F541,
    F811,
    F841
exclude =
    .git,
    __pycache__,
    .venv,
    .wsl_venv,
    node_modules,
    **/*.backup.*,
    **/*backup*.py,
    **/*_backup.py,
    **/*.bak
