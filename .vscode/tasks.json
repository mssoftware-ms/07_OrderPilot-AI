{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "uv pip install -e .",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run All Tests",
            "type": "shell",
            "command": "pytest tests/ -v",
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "pytest tests/ -v --cov=src --cov-report=html --cov-report=term",
            "problemMatcher": [],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Lint with Ruff",
            "type": "shell",
            "command": "ruff check src/ tests/",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Format with Ruff",
            "type": "shell",
            "command": "ruff format src/ tests/",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Type Check with mypy",
            "type": "shell",
            "command": "mypy src/",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Pre-commit All Files",
            "type": "shell",
            "command": "pre-commit run --all-files",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Start Trading Bot (Paper)",
            "type": "shell",
            "command": "TRADING_ENV=paper python src/main.py",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "Moltbot Gateway Status",
            "type": "shell",
            "command": "~/.clawdbot/bin/clawdbot gateway status",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Moltbot Health Check",
            "type": "shell",
            "command": "~/.clawdbot/bin/clawdbot doctor",
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}
