{
  "_description": "Konservative Crypto-Konfiguration (BTC, ETH)",
  "_risk_level": "LOW",
  "_notes": "Fokus auf Capital Preservation mit engeren Stops und weniger Trades",

  "bot_config": {
    "symbol": "BTC/USD",
    "timeframe": "1T",
    "market_type": "CRYPTO",
    "ki_mode": "NO_KI",
    "trailing_mode": "ATR",
    "entry_score_threshold": 70
  },

  "risk_config": {
    "initial_stop_loss_pct": 2.0,
    "risk_per_trade_pct": 0.5,
    "max_daily_loss_pct": 3.0,
    "max_trades_per_day": 3,
    "max_concurrent_positions": 1,
    "loss_streak_cooldown": 2,
    "cooldown_duration_minutes": 120,

    "trailing_config": {
      "atr_multiple": 2.0,
      "min_step_pct": 0.5,
      "update_cooldown_bars": 3
    }
  },

  "llm_policy": {
    "enabled": false,
    "_note": "Model wird aus QSettings geladen (File -> Settings -> AI)"
  },

  "trading_hours": {
    "mode": "24_7",
    "avoid_first_minutes": 5,
    "avoid_last_minutes": 5
  }
}
