{
  "$schema": "../schemas/backtest_config_v2.schema.json",
  "version": "2.0.0",
  "extends": "base_trendfollowing.json",

  "meta": {
    "name": "Trendfollowing Conservative",
    "description": "Konservatives Trendfollowing: Ueberlebensfokus, nur qualitativ hochwertige Setups, breites SL fuer Trendatmung.",
    "author": "OrderPilot-AI",
    "tags": ["trendfollowing", "conservative", "btc", "survival", "quality"],
    "target_asset_class": "crypto",
    "target_timeframe": "5m",
    "scenario_type": "conservative"
  },

  "overrides": {
    "entry_score.thresholds.min_score_for_entry.value": 0.65,
    "entry_score.thresholds.min_score_for_entry.range": [0.60, 0.65, 0.70],
    "entry_score.gates.allow_counter_trend_sfp": false,
    "exit_management.stop_loss.atr_multiplier.value": 2.2,
    "exit_management.stop_loss.atr_multiplier.range": [1.8, 2.0, 2.2, 2.4],
    "exit_management.take_profit.atr_multiplier.value": 2.8,
    "exit_management.take_profit.atr_multiplier.range": [2.5, 2.8, 3.0],
    "exit_management.trailing_stop.activation_atr.value": 1.8,
    "exit_management.trailing_stop.activation_atr.range": [1.5, 1.8, 2.0],
    "risk_leverage.risk_per_trade_pct.value": 0.50,
    "risk_leverage.risk_per_trade_pct.range": [0.25, 0.50, 0.75],
    "risk_leverage.base_leverage.value": 3,
    "risk_leverage.base_leverage.range": [3, 5],
    "risk_leverage.max_leverage": 10,
    "constraints.min_trades": 30,
    "constraints.max_drawdown_pct": 20
  },

  "parameter_groups": [
    {
      "name": "sl_tp_conservative",
      "description": "SL und TP Paare fuer konservatives Trading",
      "parameters": [
        "exit_management.stop_loss.atr_multiplier.value",
        "exit_management.take_profit.atr_multiplier.value"
      ],
      "combinations": [
        [1.8, 2.5],
        [2.0, 2.8],
        [2.2, 3.0],
        [2.4, 3.5]
      ]
    }
  ]
}
