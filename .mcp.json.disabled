{
  "$schema": "https://spec.modelcontextprotocol.io/schema/mcp.json",
  "mcpServers": {
    "claude-flow": {
      "command": "npx",
      "args": [
        "@claude-flow/cli@latest",
        "mcp",
        "start"
      ],
      "env": {
        "CLAUDE_FLOW_MODE": "v3",
        "CLAUDE_FLOW_HOOKS_ENABLED": "true",
        "CLAUDE_FLOW_TOPOLOGY": "hierarchical-mesh",
        "CLAUDE_FLOW_MAX_AGENTS": "15",
        "CLAUDE_FLOW_MEMORY_BACKEND": "hybrid"
      },
      "autoStart": false,
      "_comment": "This configuration is DISABLED by default (filename ends with .disabled). To enable, rename to .mcp.json. See docs/CLAUDE_FLOW_SETUP.md and docs/TROUBLESHOOTING_MCP_CLAUDE_FLOW.md for more information.",
      "_package_note": "Using @claude-flow/cli@latest (official package). If you need the alpha version, change to 'claude-flow@alpha'.",
      "_topology_note": "hierarchical-mesh topology prevents agent drift. Other options: mesh, hierarchical, adaptive.",
      "_memory_note": "hybrid backend uses HNSW (150x faster) + SQLite for persistence."
    }
  }
}
