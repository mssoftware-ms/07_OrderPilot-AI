{
  "profile": {
    "name": "breakout_momentum",
    "description": "Momentum-driven breakout with volume confirmation",
    "regimes": [
      "trend_up",
      "trend_down"
    ],
    "volatility_levels": [
      "normal",
      "high"
    ],
    "entry_threshold": 0.65,
    "trailing_mode": "atr",
    "trailing_multiplier": 1.3,
    "win_rate": null,
    "profit_factor": null,
    "expectancy": null,
    "sample_size": 0,
    "is_robust": false,
    "last_validated": null
  },
  "strategy_type": "breakout",
  "entry_rules": [
    {
      "name": "new_high_low",
      "description": "Price at N-period high/low",
      "weight": 1.8,
      "enabled": true,
      "indicator": "price_position",
      "condition": "extreme",
      "threshold": 20.0
    },
    {
      "name": "macd_strong",
      "description": "Strong MACD histogram",
      "weight": 1.5,
      "enabled": true,
      "indicator": "macd_hist",
      "condition": "strong",
      "threshold": null
    },
    {
      "name": "volume_surge",
      "description": "Volume spike on breakout",
      "weight": 1.5,
      "enabled": true,
      "indicator": "volume_ratio",
      "condition": "above",
      "threshold": 2.0
    }
  ],
  "min_entry_score": 0.65,
  "exit_rules": [
    {
      "name": "momentum_loss",
      "description": "Exit on MACD cross",
      "priority": 2,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "macd",
        "condition": "cross_against"
      }
    },
    {
      "name": "trailing",
      "description": "ATR trailing",
      "priority": 1,
      "enabled": true,
      "rule_type": "trailing",
      "params": {
        "mode": "atr",
        "multiplier": 1.5
      }
    }
  ],
  "trailing_mode": "atr",
  "trailing_params": {
    "multiplier": 1.5
  },
  "stop_loss_pct": 2.5,
  "position_size_pct": 2.0
}