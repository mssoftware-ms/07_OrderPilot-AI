{
  "profile": {
    "name": "breakout_volatility",
    "description": "Breakout on volatility expansion (BB squeeze breakout)",
    "regimes": [
      "range",
      "trend_up",
      "trend_down"
    ],
    "volatility_levels": [
      "low",
      "normal"
    ],
    "entry_threshold": 0.7,
    "trailing_mode": "atr",
    "trailing_multiplier": 1.5,
    "win_rate": null,
    "profit_factor": null,
    "expectancy": null,
    "sample_size": 0,
    "is_robust": false,
    "last_validated": null
  },
  "strategy_type": "breakout",
  "entry_rules": [
    {
      "name": "bb_squeeze_release",
      "description": "BB width expanding from squeeze",
      "weight": 2.0,
      "enabled": true,
      "indicator": "bb_width",
      "condition": "expanding",
      "threshold": 0.03
    },
    {
      "name": "price_breakout",
      "description": "Price breaking BB band",
      "weight": 1.8,
      "enabled": true,
      "indicator": "bb_pct",
      "condition": "breakout",
      "threshold": 1.0
    },
    {
      "name": "volume_confirmation",
      "description": "Above average volume on breakout",
      "weight": 1.5,
      "enabled": true,
      "indicator": "volume_ratio",
      "condition": "above",
      "threshold": 1.5
    },
    {
      "name": "momentum_confirmation",
      "description": "Momentum supporting breakout direction",
      "weight": 1.2,
      "enabled": true,
      "indicator": "macd_hist",
      "condition": "direction_match",
      "threshold": null
    }
  ],
  "min_entry_score": 0.7,
  "exit_rules": [
    {
      "name": "failed_breakout",
      "description": "Exit if price returns inside BB",
      "priority": 1,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "bb_pct",
        "condition": "inside",
        "threshold": 0.9
      }
    },
    {
      "name": "momentum_fade",
      "description": "Exit on momentum fade",
      "priority": 2,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "macd_hist",
        "condition": "divergence"
      }
    },
    {
      "name": "trailing_atr",
      "description": "ATR trailing stop",
      "priority": 3,
      "enabled": true,
      "rule_type": "trailing",
      "params": {
        "mode": "atr",
        "multiplier": 2.0
      }
    }
  ],
  "trailing_mode": "atr",
  "trailing_params": {
    "multiplier": 2.0
  },
  "stop_loss_pct": 2.0,
  "position_size_pct": 2.0
}