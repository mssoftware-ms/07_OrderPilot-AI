{
  "profile": {
    "name": "momentum_macd",
    "description": "MACD crossover momentum strategy",
    "regimes": [
      "trend_up",
      "trend_down"
    ],
    "volatility_levels": [
      "normal"
    ],
    "entry_threshold": 0.6,
    "trailing_mode": "atr",
    "trailing_multiplier": 1.5,
    "win_rate": null,
    "profit_factor": null,
    "expectancy": null,
    "sample_size": 0,
    "is_robust": false,
    "last_validated": null
  },
  "strategy_type": "momentum",
  "entry_rules": [
    {
      "name": "macd_cross",
      "description": "MACD line crosses signal line",
      "weight": 2.0,
      "enabled": true,
      "indicator": "macd",
      "condition": "crosses",
      "threshold": null
    },
    {
      "name": "macd_hist_direction",
      "description": "Histogram growing in direction",
      "weight": 1.5,
      "enabled": true,
      "indicator": "macd_hist",
      "condition": "growing",
      "threshold": null
    },
    {
      "name": "adx_trending",
      "description": "ADX above 20",
      "weight": 1.2,
      "enabled": true,
      "indicator": "adx",
      "condition": "above",
      "threshold": 20.0
    }
  ],
  "min_entry_score": 0.6,
  "exit_rules": [
    {
      "name": "macd_cross_against",
      "description": "Exit on MACD cross against",
      "priority": 2,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "macd",
        "condition": "crosses_against"
      }
    },
    {
      "name": "histogram_shrinking",
      "description": "Exit on histogram shrinking",
      "priority": 3,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "macd_hist",
        "condition": "shrinking",
        "bars": 3
      }
    },
    {
      "name": "trailing",
      "description": "ATR trailing",
      "priority": 1,
      "enabled": true,
      "rule_type": "trailing",
      "params": {
        "mode": "atr",
        "multiplier": 1.8
      }
    }
  ],
  "trailing_mode": "atr",
  "trailing_params": {
    "multiplier": 1.8
  },
  "stop_loss_pct": 2.0,
  "position_size_pct": 2.0
}