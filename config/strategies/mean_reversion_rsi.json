{
  "profile": {
    "name": "mean_reversion_rsi",
    "description": "RSI-based mean reversion in ranging markets",
    "regimes": [
      "range"
    ],
    "volatility_levels": [
      "low",
      "normal"
    ],
    "entry_threshold": 0.6,
    "trailing_mode": "pct",
    "trailing_multiplier": 1.0,
    "win_rate": null,
    "profit_factor": null,
    "expectancy": null,
    "sample_size": 0,
    "is_robust": false,
    "last_validated": null
  },
  "strategy_type": "mean_reversion",
  "entry_rules": [
    {
      "name": "rsi_extreme",
      "description": "RSI below 25 or above 75",
      "weight": 2.0,
      "enabled": true,
      "indicator": "rsi_14",
      "condition": "extreme",
      "threshold": 25.0
    },
    {
      "name": "price_at_support_resistance",
      "description": "Price near recent support/resistance",
      "weight": 1.5,
      "enabled": true,
      "indicator": "price_vs_sma20",
      "condition": "extreme",
      "threshold": 2.0
    },
    {
      "name": "volume_declining",
      "description": "Volume below average (exhaustion)",
      "weight": 1.0,
      "enabled": true,
      "indicator": "volume_ratio",
      "condition": "below",
      "threshold": 0.8
    }
  ],
  "min_entry_score": 0.6,
  "exit_rules": [
    {
      "name": "rsi_neutral",
      "description": "Exit when RSI returns to 50",
      "priority": 2,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "rsi_14",
        "condition": "near",
        "target": 50
      }
    },
    {
      "name": "trailing",
      "description": "Percentage trailing stop",
      "priority": 1,
      "enabled": true,
      "rule_type": "trailing",
      "params": {
        "mode": "pct",
        "distance": 1.2
      }
    }
  ],
  "trailing_mode": "pct",
  "trailing_params": {
    "distance_pct": 1.2
  },
  "stop_loss_pct": 1.5,
  "position_size_pct": 2.0
}