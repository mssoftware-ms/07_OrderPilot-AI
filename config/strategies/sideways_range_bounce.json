{
  "profile": {
    "name": "sideways_range_bounce",
    "description": "Range-bound trading strategy for sideways markets with max 0.6% range. Combines SMA 20/50, RSI 14, Bollinger Bands, Stochastic, Volume, and MACD for comprehensive analysis in consolidating markets.",
    "regimes": [
      "range"
    ],
    "volatility_levels": [
      "low",
      "normal"
    ],
    "entry_threshold": 0.55,
    "trailing_mode": "pct",
    "trailing_multiplier": 0.8,
    "win_rate": null,
    "profit_factor": null,
    "expectancy": null,
    "sample_size": 0,
    "is_robust": false,
    "last_validated": null
  },
  "strategy_type": "mean_reversion",
  "entry_rules": [
    {
      "name": "bb_band_touch",
      "description": "Price touching upper/lower Bollinger Band (20, 2 StdDev)",
      "weight": 1.8,
      "enabled": true,
      "indicator": "bb_pct",
      "condition": "extreme",
      "threshold": 0.05
    },
    {
      "name": "rsi_extreme",
      "description": "RSI 14 below 30 (oversold) or above 70 (overbought)",
      "weight": 1.5,
      "enabled": true,
      "indicator": "rsi_14",
      "condition": "extreme",
      "threshold": 30.0
    },
    {
      "name": "stoch_reversal",
      "description": "Stochastic 14 in extreme zone indicating reversal",
      "weight": 1.3,
      "enabled": true,
      "indicator": "stoch_k",
      "condition": "extreme",
      "threshold": 20.0
    },
    {
      "name": "sma_alignment",
      "description": "Price between SMA 20 and SMA 50 in ranging market",
      "weight": 1.0,
      "enabled": true,
      "indicator": "sma_distance",
      "condition": "near",
      "threshold": 0.5
    },
    {
      "name": "adx_sideways",
      "description": "ADX below 20 confirming ranging/sideways market",
      "weight": 1.2,
      "enabled": true,
      "indicator": "adx",
      "condition": "below",
      "threshold": 20.0
    },
    {
      "name": "volume_interest",
      "description": "Volume profile showing market interest at level",
      "weight": 0.8,
      "enabled": true,
      "indicator": "volume_ratio",
      "condition": "above",
      "threshold": 0.7
    },
    {
      "name": "macd_direction",
      "description": "MACD 12/26/9 histogram confirming direction",
      "weight": 1.0,
      "enabled": true,
      "indicator": "macd_hist",
      "condition": "direction_match",
      "threshold": null
    }
  ],
  "min_entry_score": 0.55,
  "exit_rules": [
    {
      "name": "bb_middle_exit",
      "description": "Exit when price reaches BB middle band (SMA 20)",
      "priority": 2,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "bb_middle",
        "condition": "reached"
      }
    },
    {
      "name": "rsi_neutral",
      "description": "Exit when RSI returns to 40-60 neutral zone",
      "priority": 3,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "rsi_14",
        "condition": "between",
        "low": 40,
        "high": 60
      }
    },
    {
      "name": "stoch_neutral",
      "description": "Exit when Stochastic returns to 40-60 zone",
      "priority": 4,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "stoch_k",
        "condition": "between",
        "low": 40,
        "high": 60
      }
    },
    {
      "name": "macd_cross_exit",
      "description": "Exit on MACD signal line cross against position",
      "priority": 2,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "macd",
        "condition": "crosses_against"
      }
    },
    {
      "name": "trailing_pct",
      "description": "Percentage-based trailing stop for range trading",
      "priority": 1,
      "enabled": true,
      "rule_type": "trailing",
      "params": {
        "mode": "pct",
        "distance": 0.4
      }
    }
  ],
  "trailing_mode": "pct",
  "trailing_params": {
    "distance_pct": 0.4,
    "activation_profit_pct": 0.2
  },
  "stop_loss_pct": 0.6,
  "position_size_pct": 2.0
}