{
  "profile": {
    "name": "mean_reversion_bb",
    "description": "Mean reversion on Bollinger Band touches in ranging markets",
    "regimes": [
      "range"
    ],
    "volatility_levels": [
      "low",
      "normal"
    ],
    "entry_threshold": 0.6,
    "trailing_mode": "pct",
    "trailing_multiplier": 1.0,
    "win_rate": null,
    "profit_factor": null,
    "expectancy": null,
    "sample_size": 0,
    "is_robust": false,
    "last_validated": null
  },
  "strategy_type": "mean_reversion",
  "entry_rules": [
    {
      "name": "bb_touch",
      "description": "Price at BB upper/lower band",
      "weight": 2.0,
      "enabled": true,
      "indicator": "bb_pct",
      "condition": "extreme",
      "threshold": 0.05
    },
    {
      "name": "rsi_oversold_overbought",
      "description": "RSI in oversold/overbought zone",
      "weight": 1.5,
      "enabled": true,
      "indicator": "rsi_14",
      "condition": "extreme",
      "threshold": 30.0
    },
    {
      "name": "adx_weak",
      "description": "ADX below 25 (ranging)",
      "weight": 1.2,
      "enabled": true,
      "indicator": "adx",
      "condition": "below",
      "threshold": 25.0
    },
    {
      "name": "stoch_extreme",
      "description": "Stochastic in extreme zone",
      "weight": 1.0,
      "enabled": true,
      "indicator": "stoch_k",
      "condition": "extreme",
      "threshold": 20.0
    }
  ],
  "min_entry_score": 0.6,
  "exit_rules": [
    {
      "name": "bb_middle",
      "description": "Exit at BB middle band",
      "priority": 2,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "bb_middle",
        "condition": "reached"
      }
    },
    {
      "name": "rsi_neutral",
      "description": "Exit when RSI returns to neutral",
      "priority": 3,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "rsi_14",
        "condition": "between",
        "low": 40,
        "high": 60
      }
    },
    {
      "name": "trailing_pct",
      "description": "Percentage trailing stop",
      "priority": 1,
      "enabled": true,
      "rule_type": "trailing",
      "params": {
        "mode": "pct",
        "distance": 1.5
      }
    }
  ],
  "trailing_mode": "pct",
  "trailing_params": {
    "distance_pct": 1.5,
    "activation_profit_pct": 0.5
  },
  "stop_loss_pct": 1.5,
  "position_size_pct": 2.0
}