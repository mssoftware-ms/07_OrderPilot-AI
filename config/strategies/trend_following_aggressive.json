{
  "profile": {
    "name": "trend_following_aggressive",
    "description": "Aggressive trend following for strong directional moves",
    "regimes": [
      "trend_up",
      "trend_down"
    ],
    "volatility_levels": [
      "normal",
      "high"
    ],
    "entry_threshold": 0.55,
    "trailing_mode": "atr",
    "trailing_multiplier": 1.2,
    "win_rate": null,
    "profit_factor": null,
    "expectancy": null,
    "sample_size": 0,
    "is_robust": false,
    "last_validated": null
  },
  "strategy_type": "trend_following",
  "entry_rules": [
    {
      "name": "strong_adx",
      "description": "ADX above 30 for strong trend",
      "weight": 1.8,
      "enabled": true,
      "indicator": "adx",
      "condition": "above",
      "threshold": 30.0
    },
    {
      "name": "di_spread",
      "description": "Large DI+ vs DI- spread",
      "weight": 1.5,
      "enabled": true,
      "indicator": "di_spread",
      "condition": "above",
      "threshold": 10.0
    },
    {
      "name": "momentum_rsi",
      "description": "RSI confirming momentum (>60 long, <40 short)",
      "weight": 1.2,
      "enabled": true,
      "indicator": "rsi_momentum",
      "condition": "direction_match",
      "threshold": null
    },
    {
      "name": "volume_surge",
      "description": "Above average volume",
      "weight": 1.0,
      "enabled": true,
      "indicator": "volume_ratio",
      "condition": "above",
      "threshold": 1.2
    }
  ],
  "min_entry_score": 0.55,
  "exit_rules": [
    {
      "name": "momentum_reversal",
      "description": "Exit on RSI divergence",
      "priority": 2,
      "enabled": true,
      "rule_type": "indicator",
      "params": {
        "indicator": "rsi_divergence",
        "condition": "detected"
      }
    },
    {
      "name": "trailing_tight",
      "description": "Tighter ATR trailing",
      "priority": 1,
      "enabled": true,
      "rule_type": "trailing",
      "params": {
        "mode": "atr",
        "multiplier": 1.5
      }
    }
  ],
  "trailing_mode": "atr",
  "trailing_params": {
    "multiplier": 1.5,
    "min_distance_pct": 0.8
  },
  "stop_loss_pct": 2.0,
  "position_size_pct": 2.0
}