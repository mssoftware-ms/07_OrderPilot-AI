{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AnalysisResult",
  "type": "object",
  "required": [
    "summary",
    "pros",
    "cons",
    "risk",
    "confidence",
    "meta"
  ],
  "properties": {
    "summary": {
      "type": "string",
      "minLength": 1
    },
    "pros": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "cons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "risk": {
      "type": "object",
      "required": [
        "fees_eur_hint",
        "volatility_hint",
        "atr_hint"
      ],
      "properties": {
        "fees_eur_hint": {
          "type": "string"
        },
        "volatility_hint": {
          "type": "string"
        },
        "atr_hint": {
          "type": "string"
        }
      }
    },
    "confidence": {
      "type": "string",
      "enum": [
        "high",
        "medium",
        "low"
      ]
    },
    "meta": {
      "type": "object",
      "required": [
        "promptVersion",
        "schema"
      ],
      "properties": {
        "promptVersion": {
          "type": "string"
        },
        "schema": {
          "type": "string",
          "const": "AnalysisResult"
        }
      }
    }
  }
}