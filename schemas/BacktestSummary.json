{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BacktestSummary",
  "type": "object",
  "required": [
    "headline",
    "insights",
    "improvements",
    "risks",
    "meta"
  ],
  "properties": {
    "headline": {
      "type": "string"
    },
    "insights": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "improvements": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 2,
      "maxItems": 4
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "promptVersion",
        "schema"
      ],
      "properties": {
        "promptVersion": {
          "type": "string"
        },
        "schema": {
          "type": "string",
          "const": "BacktestSummary"
        }
      }
    }
  }
}