{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AlertDecision",
  "type": "object",
  "required": [
    "priority",
    "action",
    "rationale",
    "meta"
  ],
  "properties": {
    "priority": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "high"
      ]
    },
    "action": {
      "type": "string",
      "enum": [
        "ignore",
        "monitor",
        "review"
      ]
    },
    "rationale": {
      "type": "string",
      "minLength": 1
    },
    "meta": {
      "type": "object",
      "required": [
        "promptVersion",
        "schema"
      ],
      "properties": {
        "promptVersion": {
          "type": "string"
        },
        "schema": {
          "type": "string",
          "const": "AlertDecision"
        }
      }
    }
  }
}