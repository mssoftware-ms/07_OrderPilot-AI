{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RiskCheck",
  "type": "object",
  "required": [
    "status",
    "notes",
    "meta"
  ],
  "properties": {
    "status": {
      "type": "string",
      "enum": [
        "ok",
        "review",
        "block"
      ]
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "meta": {
      "type": "object",
      "required": [
        "promptVersion",
        "schema"
      ],
      "properties": {
        "promptVersion": {
          "type": "string"
        },
        "schema": {
          "type": "string",
          "const": "RiskCheck"
        }
      }
    }
  }
}